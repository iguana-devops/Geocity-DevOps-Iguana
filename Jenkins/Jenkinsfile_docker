pipeline {
	agent any
	tools {
		jfrog 'jfrog-cli'
	}
	environment {
		DOCKER_IMAGE_NAME = "iguana.jfrog.io/gitea-docker-local/gitea:1.0."
	}
	stages {
		stage('Clone') {
			steps {
				git branch: 'main', url: "https://github.com/go-gitea/gitea.git"
			}
		}

		stage('Build Docker image') {
			steps {
				script {
					docker.build("$DOCKER_IMAGE_NAME", 'docker-oci-examples/docker-example')
				}
			}
		}

		stage('Scan and push image') {
			steps {
				dir('docker-oci-examples/docker-example/') {
					// Scan Docker image for vulnerabilities
					jf 'docker scan $DOCKER_IMAGE_NAME'

					// Push image to Artifactory
					jf 'docker push $DOCKER_IMAGE_NAME'
				}
			}
		}

		stage('Publish build info') {
			steps {
				jf 'rt build-publish'
			}
		}
	}
}
