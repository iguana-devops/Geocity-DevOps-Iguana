/* groovylint-disable CompileStatic, DuplicateStringLiteral, LineLength */
pipeline {
    agent any
    environment {
        ANSIBLE_VAULT_PASSWORD_FILE = credentials('ANSIBLE_VAULT_PASSWORD')
        GOOGLE_APPLICATION_CREDENTIALS = credentials('GOOGLE_CREDENTIALS_ID')
        WORKING_DIR = "${WORKSPACE}/ansible"
    }
    stages {
        stage('Ansible') {
            steps {
                echo 'Ansible'
                dir("${WORKING_DIR }") {
                        sh "ansible-playbook -i inventory.ini playbook.yml -e 'latest_artifact_uri=${CHOICE}' -l node_exporters --vault-password-file ${ANSIBLE_VAULT_PASSWORD_FILE}"
                        }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}
