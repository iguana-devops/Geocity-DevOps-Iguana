/* groovylint-disable DuplicateStringLiteral, LineLength, NestedBlockDepth */
pipeline {
    agent any
    tools {
        jfrog 'jfrog-cli'
        maven 'maven'
    }
    environment {
        WORKING_DIR = "${WORKSPACE}/java-app"
    }
    stages {
        stage('Build artifac') {
            steps {
                echo 'Maven build'
                dir("${WORKING_DIR }") {
                        sh 'mvn clean install -U'}
            }
        }
        stage('Push') {
            steps {
                echo 'Push to jfrog repository'
                dir("${WORKING_DIR }/target") {
                    jf "rt u  citizen.war maven-repository/citizen-${JOB_NAME}-${BUILD_NUMBER}.war"}
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}
