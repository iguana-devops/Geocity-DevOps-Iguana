/* groovylint-disable DuplicateStringLiteral, LineLength, NestedBlockDepth */
pipeline {
    agent any
    tools {
        jfrog 'jfrog-cli'
        maven 'maven'
    }
    environment {
        // CI = 'true'
        // ARTIFACTORY_ACCESS_TOKEN = credentials('artifactory-token')
        WORKING_DIR = '/var/lib/jenkins/workspace/build_and_push_artifact/java-app'
    }
    stages {
        stage('Build artifact') {
            steps {
                echo 'Maven build'
                dir("${WORKING_DIR }") {
                        sh 'mvn clean install'}
            }
        }
            stage('Push') {
                steps {
                    echo 'Push to jfrog repository'
                    dir("${WORKING_DIR }") {
                        jf 'rt u  target/citizen.war geocitizen/'
                        jf 'rt bp' }
                }
            }
    }
    post {
        always {
            cleanWs()
        }
    }
}
